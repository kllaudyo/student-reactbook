{
  "name": "whinepad",
  "version": "2.0.0",
  "babel":{
    "presets":[
      "es2015",
      "react"
    ]
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "scripts":{
    "watch" : "watch \"sh scripts\\build.sh\" js\\source css\\",
    "transpila" : "babel js/source -d js/build",
    "empacota_js" : "browserify js/build/app.js -o bundle.js & browserify js/build/discover.js -o discover-bundle.js",
    "empacota_css" : "cat css/*/* css/*.css | sed 's@..\/..\/images@images@' > bundle.css ",
    "construir" : "npm run transpila & npm run empacota_js & npm run empacota_css"
  }
}

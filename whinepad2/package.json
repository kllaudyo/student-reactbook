{
  "name": "whinepad",
  "version": "2.0.0",
  "babel":{
    "presets":[
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "babel",
      "react"
    ],
    "extends": "eslint:recommended",
    "env": {
      "browser": true
    },
    "rules": {
      "react/jsx-uses-react": 1,
      "react/jsx-uses-vars":[2]
    }
  },
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "scripts":{
    "transpila" : "babel js/source -d js/build",
    "empacota-js" : "browserify js/build/app.js -o bundle.js & browserify js/build/discover.js -o discover-bundle.js",
    "empacota-css" : "cat css/*/* css/*.css | sed 's@..\/..\/images@images@' > bundle.css ",
    "lint-js" : "eslint js/source",
    "construir" : "npm run transpila & npm run empacota-js & npm run empacota-css & npm run lint-js"
  }
}
